{
  "name": "mercurius-apollo",
  "private": true,
  "type": "module",
  "workspaces": [
    "src/*"
  ],
  "version": "1.0.0",
  "license": "CC-BY-SA-4.0",
  "scripts": {
    "lint": "eslint .",
    "generate:supergraph": "rover supergraph compose --config ./src/services/rover-config.yaml > ./src/services/supergraph.graphql",
    "install:apollo-router": "curl -sSL https://router.apollo.dev/download/nix/latest | sh",
    "prepare": "npm run install:apollo-router",
    "test:benchmark": "node ./benchmark-test.js",
    "collect-data": "node ./collect-data.js",
    "create-report": "node ./create-report.js"
  },
  "devDependencies": {
    "@apollo/rover": "^0.10.0",
    "autocannon": "^7.10.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.8.2"
  },
  "dependencies": {
    "@apollo/gateway": "^2.2.3",
    "@apollo/server": "^4.3.0",
    "@apollo/subgraph": "^2.2.3",
    "ascii-table": "0.0.9",
    "chartjs-node-canvas": "4.1.6",
    "fastify": "^4.11.0",
    "graphql": "^16.6.0",
    "graphql-tag": "^2.12.6",
    "markdown-table": "3.0.3",
    "mercurius": "11.5.0",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^9.1.1"
  }
}
